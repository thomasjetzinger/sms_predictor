<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0"
      prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.fhooe.mc.it.MainController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0">
            <children>
                <Button mnemonicParsing="false" onMouseClicked="#onReadFileButton" text="Read file"/>
                <HBox prefWidth="100.0" spacing="15.0">
                    <Label fx:id="mWord1" mnemonicParsing="false" text="Word1"/>
                    <Label fx:id="mWord2" mnemonicParsing="false" text="Word2"/>
                    <Label fx:id="mWord3" mnemonicParsing="false" text="Word3"/>
                </HBox>
                <TextField fx:id="mTextFieldInput" prefWidth="591.0" promptText="enter text"/>
                <TextArea prefHeight="200.0" prefWidth="200.0"/>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </VBox>
    </children>
